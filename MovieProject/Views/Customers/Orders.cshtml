@{
    ViewBag.Title = "Index";
}




<div class="form-horizontal">
    <h4>Customer to show order</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Insert email customer:")

        @Html.Editor("EmailCustomer")

        <p>
            @Html.ActionLink("Search order for this customer", "CustomerOrder", "Customers", null, new { onclick = "this.href += '/' + document.getElementById('EmailCustomer').value + '/';" })
        </p>

    </div>
</div>

